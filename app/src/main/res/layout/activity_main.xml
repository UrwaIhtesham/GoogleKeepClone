<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.MainActivity"
    android:background="@color/primary">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/search_bar_rounded"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hamburgermenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/hamburger_menu" />

            <EditText
                android:id="@+id/searchbar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search your notes"
                android:textColor="#c2c6cf"
                android:textColorHint="#c2c6cf"
                android:textSize="17sp"
                android:inputType="text"
                android:autofillHints="name"/>
        </LinearLayout>

        <!-- Right side: Agenda and Launcher Background icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viewagenda"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/view_agenda"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinnedlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/pinned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinned"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="16dp"/>

        <GridLayout
            android:id="@+id/pinned_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

        <!-- Card 1 in the grid (Column 1, Row 1) -->
        <androidx.cardview.widget.CardView
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:background="@drawable/cardview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Card 1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card 2 in the grid (Column 2, Row 1) -->
        <androidx.cardview.widget.CardView
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_row="0"
            android:layout_column="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:background="@drawable/cardview">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Card 2"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

    </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pinnedlayout">

        <TextView
            android:id="@+id/others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Others"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="16dp"/>

        <GridLayout
            android:id="@+id/others_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Card 1 in the grid (Column 1, Row 1) -->
            <androidx.cardview.widget.CardView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:layout_row="0"
                android:layout_column="0"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/cardview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Card 1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <!-- Card 2 in the grid (Column 2, Row 1) -->
            <androidx.cardview.widget.CardView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:layout_row="0"
                android:layout_column="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@drawable/cardview">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Card 2"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/plus_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/blurOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.93"
        android:visibility="gone"/>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationDrawer"
        android:layout_gravity="start"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fitsSystemWindows="true"
        android:paddingBottom="16dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:headerLayout="@layout/nav_menu"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>